<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/calculate_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/border_style_accent">

        <TextView
            android:id="@+id/date_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:text="@string/date"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/date_set_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:layout_toRightOf="@id/date_textView"
            android:background="@drawable/border_style_accent"
            android:onClick="showDatePickerDialog"/>

        <TextView
            android:id="@+id/height_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_set_textView"
            android:paddingTop="6dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:text="@string/height"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/height_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_set_textView"
            android:layout_alignParentRight="true"
            android:paddingTop="6dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:text="@string/height_units"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/height_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/date_set_textView"
            android:layout_toRightOf="@id/height_textView"
            android:layout_toLeftOf="@id/height_units"
            android:inputType="numberDecimal"
            android:gravity="right"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/weight_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/height_textView"
            android:paddingTop="6dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:text="@string/weight"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/weight_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/height_units"
            android:layout_alignParentRight="true"
            android:paddingTop="6dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:text="@string/weight_units"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/weight_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="10dp"
            android:layout_below="@id/height_editText"
            android:layout_toRightOf="@id/weight_textView"
            android:layout_toLeftOf="@id/weight_units"
            android:inputType="numberDecimal"
            android:gravity="right"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/weight_editText">

            <Button
                android:id="@+id/calculate_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_marginTop="15dp"
                android:text="@string/calculate"
                android:textStyle="bold"
                android:background="@drawable/button_yellow_style"
                android:onClick="calculateBMI"/>

            <ImageButton
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:layout_gravity="bottom"
                android:src="@drawable/data"
                android:onClick="showWeightRecords"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bmi_result_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calculate_relativeLayout"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/border_style_accent"
        android:visibility="invisible">

        <TextView
            android:id="@+id/result_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/result"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"/>

        <View
            android:id="@+id/boarder"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_below="@id/result_textView"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/bmi_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/boarder"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp"
            android:text="@string/bmi"/>

        <TextView
            android:id="@+id/bmi_result_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bmi_textView"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:text=""
            android:textStyle="bold"/>

        <View
            android:id="@+id/boarder_vertical"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:layout_below="@id/result_textView"
            android:layout_toRightOf="@id/bmi_result_textView"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/category_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/boarder"
            android:layout_toRightOf="@id/boarder_vertical"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:paddingBottom="8dp"
            android:text="@string/category" />

        <TextView
            android:id="@+id/category_result_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/category_textView"
            android:layout_toRightOf="@id/boarder_vertical"
            android:paddingLeft="16dp"
            android:paddingBottom="16dp"
            android:text=""
            android:textStyle="bold"/>

        <View
            android:id="@+id/boarder_light"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_below="@id/category_result_textView"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/optimum_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/boarder_light"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:text="@string/optimum_result" />

        <TextView
            android:id="@+id/optimum_result_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/optimum_textView"
            android:paddingBottom="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:text=""
            android:textStyle="bold"/>

        <Button
            android:id="@+id/record_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/optimum_result_textView"
            android:text="@string/record"
            android:textStyle="bold"
            android:background="@drawable/button_yellow_style"
            android:onClick="onRecordWeightButtonClicked"/>
    </RelativeLayout>

</LinearLayout>