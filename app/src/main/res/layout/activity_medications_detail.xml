<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_style"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/medicine_name_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="@string/name"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <EditText
                android:id="@+id/medicine_name_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginLeft="4dp"
                android:layout_weight="2"
                android:hint="@string/name"
                android:textSize="15dp"
                android:padding="4dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dosage_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="@string/dosage"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <EditText
                android:id="@+id/dosage_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginLeft="4dp"
                android:layout_weight="2"
                android:hint="@string/dosage"
                android:textSize="15dp"
                android:padding="4dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="@string/number"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <EditText
                android:id="@+id/number_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginLeft="4dp"
                android:layout_weight="2"
                android:hint="@string/number"
                android:textSize="15dp"
                android:padding="4dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/how_taken_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="@string/how_taken"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <Spinner
                android:id="@+id/how_taken_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginLeft="4dp"
                android:layout_weight="2"
                android:padding="4dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/how_often_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:maxLines="3"
                android:padding="4dp"
                android:text="@string/how_often"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/how_often_set_textView"
                style="@android:style/Widget.DeviceDefault.Spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_marginLeft="4dp"
                android:layout_weight="2"
                android:padding="4dp"
                android:onClick="showFrequencyDialog" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:id="@+id/commencement_date_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/commencement_date_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="@string/commencement_date"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/commencement_date_editText"
                style="@android:style/Widget.Holo.Spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:padding="4dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="2"
                android:hint="@string/commencement_date"
                android:onClick="showDatePickerDialog"/>

        </LinearLayout>

        <View
            android:id="@+id/commencement_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/medication_time_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/medication_time_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="@string/medication_time"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/medication_time_set_textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_marginLeft="4dp"
                android:layout_weight="2"
                android:hint="@string/set_time"
                android:onClick="showTimePickerDialog"
                android:padding="4dp" />
        </LinearLayout>

        <View
            android:id="@+id/medications_time_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/how_long_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="@string/how_long"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/how_long_set_textView"
                style="@android:style/Widget.DeviceDefault.Spinner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:layout_marginLeft="4dp"
                android:layout_weight="2"
                android:onClick="showLengthDialog"
                android:padding="4dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <Switch
            android:id="@+id/medication_reminder_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="50dp"
            android:text="@string/reminder"
            android:textOn="@string/on"
            android:textOff="@string/off"
            android:showText="true"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/button_accent_style"
        android:onClick="onRecordMedicationButtonClicked"
        android:text="@string/record"
        android:textStyle="bold" />
</LinearLayout>