<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_style"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/doctors_name_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="@string/name"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <EditText
                android:id="@+id/doctors_name_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginLeft="4dp"
                android:layout_weight="2"
                android:hint="@string/name"
                android:textSize="15dp"
                android:padding="4dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/address_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="@string/address"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <EditText
                android:id="@+id/address_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginLeft="4dp"
                android:layout_weight="2"
                android:hint="@string/address"
                android:textSize="15dp"
                android:padding="4dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tephone_number1_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="@string/telephone_number1"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <EditText
                android:id="@+id/tephone_number1_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginLeft="4dp"
                android:layout_weight="2"
                android:hint="@string/telephone_number1"
                android:textSize="15dp"
                android:padding="4dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tephone_number2_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="@string/telephone_number2"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <EditText
                android:id="@+id/tephone_number2_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginLeft="4dp"
                android:layout_weight="2"
                android:hint="@string/telephone_number1"
                android:textSize="15dp"
                android:padding="4dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/email_textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:text="@string/email"
                android:textSize="15sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <EditText
                android:id="@+id/email_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginLeft="4dp"
                android:layout_weight="2"
                android:hint="@string/email"
                android:textSize="15dp"
                android:padding="4dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/last_date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/last_date"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/last_date_textView"
                android:background="@drawable/button_accent_style"
                android:text="@string/last_date"
                android:textStyle="bold"
                android:onClick="" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/next_date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/next_date"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/next_date_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/next_date_textView"
                android:background="@drawable/button_accent_style"/>

            <TextView
                android:id="@+id/next_date_textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/next_date_spinner"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="@string/or"
                android:textSize="15sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/next_date_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/next_date_textView2"
                android:background="@drawable/button_accent_style"
                android:text="@string/select_exact_date"
                android:textStyle="bold"
                android:onClick="" />

        </RelativeLayout>

        <Switch
            android:id="@+id/medication_reminder_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:layout_marginRight="120dp"
            android:layout_marginLeft="50dp"
            android:text="@string/reminder"
            android:textStyle="bold"
            android:textOn="@string/on"
            android:textOff="@string/off"
            android:showText="true"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/button_accent_style"
        android:onClick="onRecordMedicationButtonClicked"
        android:text="@string/record"
        android:textStyle="bold" />
</LinearLayout>