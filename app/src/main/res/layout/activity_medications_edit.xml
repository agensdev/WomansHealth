<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_style_accent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="@string/name"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent" />

                <EditText
                    android:id="@+id/medicine_name_editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:padding="12dp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:hint="@string/name"
                    android:textSize="15dp"
                    android:maxLines="1"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="@string/dosage"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent" />

                <EditText
                    android:id="@+id/dosage_editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:padding="12dp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:hint="@string/dosage"
                    android:textSize="15dp"
                    android:maxLines="1"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="@string/number"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent" />

                <EditText
                    android:id="@+id/number_editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:padding="12dp"
                    android:layout_marginLeft="4dp"
                    android:gravity="center_vertical"
                    android:hint="@string/number"
                    android:textSize="15dp"
                    android:maxLines="1"
                    android:inputType="number"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="@string/how_taken"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent" />

                <Spinner
                    android:id="@+id/how_taken_spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:minHeight="?android:attr/listPreferredItemHeightSmall"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:padding="4dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:maxLines="3"
                    android:padding="4dp"
                    android:text="@string/how_often"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent" />

                <TextView
                    android:id="@+id/how_often_set_textView"
                    style="@android:style/Widget.DeviceDefault.Spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:onClick="showFrequencyDialog"
                    android:padding="4dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent" />

            <LinearLayout
                android:id="@+id/commencement_date_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="@string/commencement_date"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/commencement_set_textView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:hint="@string/commencement_date"
                        android:onClick="showDatePickerDialog"
                        android:padding="4dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/commencement_delete"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick=""
                        android:padding="4dp"
                        android:text="x"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/commencement_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/medication_time_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="1dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="@string/medication_time"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/medication_time_set_textView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:hint="@string/set_time"
                        android:onClick="showTimePickerDialog"
                        android:padding="4dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/medication_time_delete"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:onClick=""
                        android:padding="4dp"
                        android:text="x"
                        android:textSize="20sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/medications_time_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:padding="4dp"
                    android:text="@string/how_long"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent" />

                <TextView
                    android:id="@+id/how_long_set_textView"
                    style="@android:style/Widget.DeviceDefault.Spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:onClick="showLengthDialog"
                    android:padding="4dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent" />

            <Switch
                android:id="@+id/medication_reminder_switch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="120dp"
                android:padding="8dp"
                android:showText="true"
                android:text="@string/reminder"
                android:textOff="@string/off"
                android:textOn="@string/on" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/button_yellow_style"
            android:text="@string/record"
            android:textStyle="bold"
            android:onClick="onRecordMedicationButtonClicked"/>
    </LinearLayout>
</ScrollView>