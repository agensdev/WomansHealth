<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blashca.womanshealth">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity" >
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AppointmentsActivity"
            android:label="My Appointments"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity
            android:name=".AppointmentDetailActivity"
            android:parentActivityName=".AppointmentsActivity">
        </activity>

        <activity
            android:name=".AppointmentEditActivity"
            android:parentActivityName=".AppointmentDetailActivity">
        </activity>

        <activity
            android:name=".WeightActivity"
            android:label="Weight/BMI"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateVisible">
        </activity>

        <activity
            android:name=".WeightRecordsActivity"
            android:label="Weight/BMI"
            android:parentActivityName=".WeightActivity">
        </activity>

        <activity
            android:name=".PeriodActivity"
            android:label="Menstrual Period"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity
            android:name=".PeriodRecordsActivity"
            android:label="Menstrual Period Records"
            android:parentActivityName=".PeriodActivity">
        </activity>

        <activity
            android:name=".MedicationsActivity"
            android:label="My Medications"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity
            android:name=".MedicationDetailActivity"
            android:parentActivityName=".MedicationsActivity">
        </activity>

        <activity
            android:name=".MedicationEditActivity"
            android:parentActivityName=".MedicationDetailActivity">
        </activity>

        <activity
            android:name=".AllergenDetailActivity"
            android:parentActivityName=".MedicationsActivity">
        </activity>

        <activity
            android:name=".AllergenEditActivity"
            android:parentActivityName=".AllergenDetailActivity"
            android:windowSoftInputMode="stateVisible">
        </activity>

        <activity
            android:name=".ProfileActivity"
            android:label="Settings"
            android:parentActivityName=".MainActivity">
        </activity>

    </application>

</manifest>